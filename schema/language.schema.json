{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sbll-cms.local/schema/language.schema.json",
  "title": "Language",
  "type": "object",
  "properties": {
    "isoCode": {
      "type": "string",
      "pattern": "^[a-z]{3}$",
      "description": "ISO 639-3 language code."
    },
    "displayName": {
      "type": "string",
      "description": "Human-readable language name."
    },
    "symbol": {
      "type": "string",
      "description": "Short symbol or abbreviation for UI display."
    },
    "ai_note": {
      "type": "string",
      "description": "Optional hint for LLMs when translating into this language."
    }
  },
  "required": ["isoCode", "displayName", "symbol"],
  "additionalProperties": false,
  "examples": [
    {
      "isoCode": "eng",
      "displayName": "English",
      "symbol": "EN"
    }
  ]
}
